<div class="container page_wrapper full-width">
  <div class="row">

    <div class="col-md-12">
      <% @fullwidth.each do |post| %>
        <%= image_tag post.image.url(:large), class: "img-responsive full-width" %>
        <div class="container">
          <p class="date"><%= post.category.name %></p>
          <h1><%= link_to post.title, post %></h1>
          <h3 class="excerpt"><%= post.excerpt %></h3>
          <h5 class="author">by: <%= post.author %></h5>
        </div>
      <% end %>
    </div>

  </div>
</div>
