<div class="container page_wrapper border">
  <div class="row">

    <div class="col-md-4">
      <% @firstright.each do |post| %>
        <p class="date"><%= post.category.name %></p>
        <h1><%= link_to post.title, post %></h1>
        <h3 class="excerpt"><%= post.excerpt %></h3>
        <h5 class="author">by: <%= post.author %></h5>
      <% end %>
    </div>

    <div class="col-md-8">
      <% @firstright.each do |post| %>
        <%= image_tag post.image.url(:large), class: "img-responsive" %>
      <% end %>
    </div>

  </div>
</div>
